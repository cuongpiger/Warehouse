<%- include('../partials/header') %>
<div class="container-fluid">
  <h1 class="text-center mt-5 mb-5">ADMIN LOGIN</h1>
  <div class="row justify-content-center">
    <div class="col-md-4 card p-4 d-flex justify-content-center">
      <form action="/admins/login" method="POST">
        <% if (typeof adminLogin !== "undefined") { %> 
          <div class="alert alert-danger" role="alert">
            Incorrect account or password!
          </div>
        <% } %> 
        <div class="form-group">
          <label>Email</label>
          <input
            type="email"
            class="form-control"
            placeholder="Enter your email"
            name="email"
            value="<%= typeof adminLogin !== "undefined" ? adminLogin.email : "" %>"
            autofocus
          />
        </div>
        <div class="form-group">
          <label>Password</label>
          <input
            type="password"
            class="form-control"
            aria-describedby="emailHelp"
            placeholder="Enter your password"
            name="password"
            value="<%= typeof adminLogin !== "undefined" ? adminLogin.password : "" %>"
          />
        </div>

        <div class="form-check">
          <input type="checkbox" class="form-check-input" name="rememberPassword" <%= typeof rememberPassword !== "undefined" && rememberPassword === 1 ? "checked" : "" %> />
          <label class="form-check-label">Remember password</label>
        </div>
        <button type="submit" class="btn btn-primary w-100 mt-3">
          SIGN IN
        </button>
      </form>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>