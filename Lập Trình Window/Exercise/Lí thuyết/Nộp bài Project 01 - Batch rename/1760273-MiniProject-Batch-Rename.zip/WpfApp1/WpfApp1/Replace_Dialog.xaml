<Window x:Class="WpfApp1.Replace_Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Replace Dialog" Height="215" Width="375" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Canvas>
        <TextBlock Text="Enter string to find" Canvas.Left="10" Canvas.Top="10"/>
        <TextBox Name="needleTextbox" Width="340" Height="30" Canvas.Left="10" Canvas.Top="26" Padding="0"/>

        <TextBlock Text="Enter string to replace" Canvas.Left="10" Canvas.Top="75"/>
        <TextBox Name="hammerTextbox" Width="340" Height="30" Canvas.Left="10" Canvas.Top="96" Padding="0"/>

        <Button Name="saveButton" Click="SaveButton_Click" IsDefault="True" Content="Save" Width="90" Height="25" Canvas.Left="70" Canvas.Top="146"/>
        <Button Name="cancelButton" IsCancel="True" Content="Cancel" Width="90" Height="25" Canvas.Left="200" Canvas.Top="146"/>
    </Canvas>
</Window>
