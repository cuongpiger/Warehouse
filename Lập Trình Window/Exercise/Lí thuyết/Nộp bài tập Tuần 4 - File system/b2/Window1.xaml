<Window x:Class="b2.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:b2"
        mc:Ignorable="d"
        Title="List Items" Height="450" Width="650">
    <Grid>
        <ListBox x:Name="lsbMain"
                 HorizontalAlignment="Left" Height="311" VerticalAlignment="Top" Width="622" Margin="10,10,0,0"/>
        <Button x:Name="btnDelete" Width="70" Height="50" Content="Delete"
                HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Margin="10,0,0,20"
                Click="BtnDelete_Click"></Button>
        <Button x:Name="btnRename" Width="70" Height="50" Content="Rename"
                HorizontalAlignment="Left" Margin="90,0,0,20"
                VerticalAlignment="Bottom"
                Click="BtnRename_Click"></Button>
        <TextBox x:Name="txbRename" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                 Margin="0,0,10,20" Width="300" Height="50" IsEnabled="True"
                 ></TextBox>
        <Label VerticalAlignment="Bottom"
               Margin="180,0,315.2,20"
               FontSize="16" Height="50"
               >Change Filename</Label>
    </Grid>
</Window>
