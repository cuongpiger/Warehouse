<Window x:Class="b1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:b1"
        mc:Ignorable="d"
        Title="Phần 1" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnOpen" Content="Open"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Width="90" Margin="100,22,0,0" Height="32"
                Click="BtnOpen_Click" />

        <Button x:Name="btnSave" Content="Save"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Width="90" Margin="0,22,100,0" Height="32"
                Click="BtnSave_Click"/>
        
        <TextBox x:Name="txbFiles" HorizontalAlignment="Center"
                 Height="230" TextWrapping="Wrap" VerticalAlignment="Bottom"
                 Width="450" Margin="0,0,0,10"></TextBox>
    </Grid>
</Window>
